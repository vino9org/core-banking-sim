#!/bin/bash

# default settings
PUSH_FLAG=""
VERSION="0.1.3"

while getopts "v:p" arg; do
  case $arg in
    p)
      PUSH_FLAG="--push"
      ;;
    v)
      VERSION=$OPTARG
      ;;
  esac
done


docker rmi -t sloppycoder/vinobank-corebanking-sim:$VERSION

CMD="docker buildx build --platform linux/amd64 -t public.ecr.aws/vino9/vinobank-corebanking-sim:$VERSION $PUSH_FLAG ."
echo $CMD
$CMD
